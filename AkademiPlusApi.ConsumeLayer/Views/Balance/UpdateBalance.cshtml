@model AkademiPlusApi.ConsumeLayer.Models.BalanceViewModes.BalanceUpdateViewModel
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />


<div class="container">
    <form method="post">
        <input type="hidden" asp-for="BalanceID" />
        <label>Müşteri Hesap Numarası</label>
        <input type="text" class="form-control" asp-for="AccountNumber" />
        <br />

        <label>Müşteri Başlangıç Bakiyesi </label>
        <input type="text" class="form-control" asp-for="CustomerBalance" />
        <br />

        <label>Hesap Döviz Türü </label>
        <input type="text" class="form-control" asp-for="Currency" />
        <br />
        <button class="btn btn-primary">Hesap Ekle</button>
    </form>
</div>

